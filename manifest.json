{
    "name": "TSO Helper",
    "version": "1.0",
    "description": "TSO Helper Extension!",
    "manifest_version": 2,
    "incognito": "split",
    "content_scripts": [
        {
            "matches": [
                "http://*/*",
                "https://*/*"
            ],
            "js": [
                "app.js"
            ]
        }
    ],
    "permissions": [
        "activeTab",
        "declarativeContent",
        "storage",
        "context_Menus","tabs"],
        
    "icons": {
        "128": "icon.png"
    },
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "browser_action": {
        "default_popup": "index.html",
        "default_icon": {
            "128": "icon.png"
        }
    }
}